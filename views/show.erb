<div class="container <%= @student.house.color %>">
  <div id="profile">
      <div id="avatar">
        <img src="/img/ron.png"/>
      </div>
      <div id="">
          <p>Name: <%= @student.pretty_name() %></p>
          <p>House: <%= @student.house.name %></p>
          <p>Age: <%= @student.age %></p>
      </div>
      <div id="house_logo">
        <img src="/img/<%= @student.house.name %>.png"/>
      </div>

      <form method="post" action="/students/<%= @student.id %>/delete">
          <p><input type='submit' value="Remove Student"/></p>
      </form>

      <form method="get" action="/students/<%= @student.id %>/edit">
          <p><input type='submit' value="Update Student Details"/></p>
      </form>
    </div>
</div>
